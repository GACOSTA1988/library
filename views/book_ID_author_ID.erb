<h2>Author: <%= @author.name %></h2>
<h3>Book: <%= @author.book.title %></h3>

<form action="/books/<%= @author.book.id %>/authors/<%= @author.id %>" method="post">
    <input name="_method" type="hidden" value="patch">

    <label>
        Rename author
        <input id="name" name="author_name" type="text">
    </label>

    <button type="submit">Update author</button>
</form>

<form action="/books/<%= @author.book.id %>/authors/<%= @author.id %>" method="post">
    <input name="_method" type="hidden" value="delete">

    <button type="submit">Delete author</button>
</form>

<a href="/books/<%= @author.book.id %>">Back to <%= @author.book.title %></a>
